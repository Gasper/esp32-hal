#!/bin/bash

cargo xbuild --example $1

if [ $? -ne 0 ]; then
    exit
fi


# change this for release flashes
BIN_PATH=target/xtensa-esp32-none-elf/debug/examples/$1

rm $BIN_PATH.bin

# convert to bin
esptool --chip esp32 elf2image --flash_mode="dio" --flash_freq "40m" --flash_size "4MB" -o $BIN_PATH.bin $BIN_PATH

# flash
esptool --chip esp32 --port /dev/ttyUSB0 --baud 921600 --before default_reset --after hard_reset write_flash -z --flash_mode dio --flash_freq 40m --flash_size detect 0x1000 $BIN_PATH.bin
